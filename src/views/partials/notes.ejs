<div class="notes-container">
    <% if (notes.length <= 0) { %>
        <p>No notes found.</p>
    <% } else { %>
    <% notes.forEach(note => { %>
        <div class="note-card">
            <h3><%= note.title %></h3>
            <p><%= note.message %></p>
            <div class="note-actions">
                <a href="/notes/edit/<%= note._id %>" class="btn btn-edit">Edit</a>
                <a href="/notes/delete/<%= note._id %>" class="btn btn-delete">Delete</a>
            </div>
        </div>
    <% })} %>
</div>